<script>
function calculate() {
  const scores = { balance:0, strength:0, cardio:0, flex:0 };
  const questions = 5;

  for (let i = 1; i <= questions; i++) {
    const answer = document.querySelector('input[name="q'+i+'"]:checked');
    if (!answer) {
      alert("Please answer all questions before seeing results.");
      return;
    }
    scores[answer.value]++;
  }

  let resultType = Object.keys(scores).reduce((a, b) =>
    scores[a] > scores[b] ? a : b
  );

  const resultBox = document.getElementById("result");
  resultBox.style.display = "block";

  const results = {
    balance: `
      <h2>Your Best Fit: Steady & Supported Movement</h2>
      <p>Your answers suggest that balance and stability may be especially important right now.</p>
      <ul>
        <li>Balance exercises</li>
        <li>Chair-supported strength work</li>
        <li>Slow, controlled movements</li>
        <li>Walking with support</li>
      </ul>
      <p>Many people combine this with gentle strength or flexibility work.</p>
    `,
    strength: `
      <h2>Your Best Fit: Gentle Strength Builder</h2>
      <p>Your body may benefit most from building strength in a controlled, supportive way.</p>
      <ul>
        <li>Light weights or resistance bands</li>
        <li>Body-weight exercises</li>
        <li>Functional strength for daily tasks</li>
      </ul>
      <p>Strength work supports balance, confidence, and independence.</p>
    `,
    cardio: `
      <h2>Your Best Fit: Low-Impact Mover</h2>
      <p>Your answers suggest that steady movement and endurance feel most helpful.</p>
      <ul>
        <li>Walking</li>
        <li>Cycling or stationary bike</li>
        <li>Water exercise</li>
      </ul>
      <p>Low-impact cardio supports heart health without stressing joints.</p>
    `,
    flex: `
      <h2>Your Best Fit: Flexible & Energizing Movement</h2>
      <p>Your body may benefit most from improving mobility and reducing stiffness.</p>
      <ul>
        <li>Stretching routines</li>
        <li>Gentle yoga-style movement</li>
        <li>Range-of-motion exercises</li>
      </ul>
      <p>Many people pair flexibility work with light strength or balance exercises.</p>
    `
  };

  resultBox.innerHTML = results[resultType];
}

function resetQuiz() {
  document.querySelectorAll('input[type="radio"]').forEach(r => r.checked = false);
  document.getElementById("result").style.display = "none";
  document.getElementById("result").innerHTML = "";
}
</script>

</body>
